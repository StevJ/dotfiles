{
  "intelephense.licenceKey": "/home/steven/.config/intelephense/license.txt",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "ligo": {
      "command": "~/.local/bin/ligo-squirrel",
      "filetypes": ["ligo", "mligo", "religo"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["reason", "rescript"],
  "suggest.snippetIndicator": " ►",
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.checkCurrentLine": true,
  "npm.binPath": "yarn",
  "python.venvPath": "~/.local/share/virtualenvs"
}

